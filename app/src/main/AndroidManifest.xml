            android:name=".view.review_list_activity.ImageActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.conversation_activity.InviteToChatActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.qr_manager_activity.OpinionQRActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.qr_manager_activity.QRManagerActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.settings_activity.NotificationsActivity"
