        <activity
            android:name=".view.qr_manager_activity.AddOrEditAnswerActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.qr_manager_activity.AddOrEditCategoryActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.qr_manager_activity.CallToActionQRActivity"
            android:screenOrientation="portrait" />
